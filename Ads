<body>
  <h2>🔁 Giga.pub Ad Test</h2>
  <button onclick="showTestAd()">▶ Show Ad</button>

  <script>
    function showTestAd() {
      if (typeof window.showGiga === "function") {
        window.showGiga()
          .then(() => {
            alert("✅ Ad shown successfully!");
          })
          .catch(err => {
            alert("❌ Error showing ad: " + err);
            console.error(err);
          });
      } else {
        alert("🚫 Giga Ad not loaded properly. Try again later.");
      }
    }
  </script>
